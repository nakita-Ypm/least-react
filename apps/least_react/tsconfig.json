  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    /* import alias */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
